generator db {
    provider = "go run github.com/steebchen/prisma-client-go"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id        Int      @id @default(autoincrement())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    email     String   @unique
    name      String
    password  String
}

model Repository {
    id   Int    @id @default(autoincrement())
    name String
    url  String
}
